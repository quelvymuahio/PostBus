<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReciptActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/receipt"
        android:textColor="@color/colorWhite"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/app_title"
        android:layout_margin="@dimen/title"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/title"
        android:id="@+id/receipt_cardview"
        app:cardCornerRadius="6dp"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ticket_title"
                android:layout_margin="5dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ticket"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ticket_info_id"
                android:layout_below="@id/ticket_title"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1455234"
                    android:textSize="15dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_alignParentRight="true"
                    android:id="@+id/id_ticket"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="SERIAL NUMBER"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ticket_info_id"
                android:layout_margin="5dp"
                android:id="@+id/ticket_info_price">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maputo - Gaza"
                    android:textSize="15dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_alignParentRight="true"
                    android:id="@+id/ticket_price"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/available_tickets"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="ROTA"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ticket_info_price"
                android:layout_margin="5dp"
                android:id="@+id/ticket_info_available_tickets">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.000 MT"
                    android:textSize="15dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tickets_available"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="PREÃ‡O"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ticket_info_available_tickets"
                android:layout_margin="5dp"
                android:id="@+id/ticket_info_status">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30/05/2018"
                    android:textSize="15dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tickets_status"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="DATA VIAGEM"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ticket_info_status"
                android:layout_margin="5dp"
                android:id="@+id/ticket_info_hour">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05h 30 min"
                    android:textSize="15dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tickets_departue_Date"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="HORA PARTIDA"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ticket_info_hour"
                android:layout_margin="5dp"
                android:id="@+id/ticket_info_passangers">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="15dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tickets_passangers"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="PASSAGEIROS"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/sentVia"
        android:layout_below="@id/receipt_cardview"
        android:text="Enviar via"
        android:textSize="@dimen/content_text"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/sentVia"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensagem"
            android:id="@+id/receipt_message"
            android:background="@drawable/btn_white_bg"
            android:textColor="@color/colorWhite"
            android:padding="@dimen/activity_vertical_margin"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/receipt_email"
            android:background="@drawable/btn_white_bg"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:padding="@dimen/activity_vertical_margin"/>
    </LinearLayout>

</RelativeLayout>