<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/ticket_image"
                android:scaleType="fitXY"
                android:src="@drawable/background2"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rota"
                android:textColor="@color/colorBlack"
            android:gravity="left"
            android:textSize="25dp"
            android:id="@+id/ticket_name"
            android:layout_below="@id/ticket_image"
            android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25 bilhetes"
                android:padding="5dp"
                android:gravity="right"
                android:textSize="15dp"
                android:textColor="@color/colorRed"
                android:id="@+id/available_tickets"
                android:layout_below="@id/ticket_image"
                android:layout_centerInParent="true"/>

            <LinearLayout
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_below="@id/ticket_name"
                android:id="@+id/layout_date">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_calendar"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="3dp"/>
                <TextView
                    android:id="@+id/ticket_date"
                    android:layout_width="wrap_content"
                    android:paddingBottom="1dp"
                    android:layout_height="match_parent"
                    android:text="02/06/2018"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_date">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.500 MT"
                    android:textSize="18dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/ticket_price"
                    android:textColor="@color/colorBlack"/>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>